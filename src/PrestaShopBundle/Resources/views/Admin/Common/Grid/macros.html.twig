{% macro column_widget(record, column, grid) %}
    {% include [
        '@PrestaShop/Admin/Common/Grid/Columns/Widget/'~grid.id~'_'~column.id~'_'~column.type~'.html.twig',
        '@PrestaShop/Admin/Common/Grid/Columns/Widget/'~grid.id~'_'~column.type~'.html.twig',
        '@PrestaShop/Admin/Common/Grid/Columns/Widget/'~column.type~'.html.twig',
        '@PrestaShop/Admin/Common/Grid/Columns/Widget/default.html.twig'
        ] with {'row': record, 'column': column, 'grid': grid} %}
{% endmacro %}

{% macro column_content(record, column, grid) %}
    {% include [
        '@PrestaShop/Admin/Common/Grid/Columns/Content/'~grid.id~'_'~column.id~'_'~column.type~'.html.twig',
        '@PrestaShop/Admin/Common/Grid/Columns/Content/'~grid.id~'_'~column.type~'.html.twig',
        '@PrestaShop/Admin/Common/Grid/Columns/Content/'~column.type~'.html.twig',
        ] with {'row': record, 'column': column, 'grid': grid} %}
{% endmacro %}

