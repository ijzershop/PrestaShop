{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% trans_default_domain "Admin.Shopparameters.Feature" %}

{% block content %}
  {% set metaForm = form.meta %}
  <div class="row justify-content-center">
    <div class="col">
      {{ form_start(metaForm) }}
      <div class="card">
        <div class="card-header">
          {{ 'Meta tags'|trans }}
        </div>
        <div class="card-block row">
          <div class="card-text">
            <div class="form-group row">
              <label class="form-control-label">
                {{ ps.label_with_help('Page name'|trans, ('Name of the related page.'|trans({}, 'Admin.Shopparameters.Help'))) }}
              </label>
              <div class="col-sm">
                {{ form_errors(metaForm.page_name) }}
                {{ form_widget(metaForm.page_name) }}
              </div>
            </div>
            <div class="form-group row">
              <label class="form-control-label">
                {% set pageTilteLabel %}
                  {{ 'Title of this page.'|trans({}, 'Admin.Shopparameters.Help') }}
                  {{ 'Invalid characters:'|trans({}, 'Admin.Shopparameters.Help') ~ '  &lt;&gt;;=#{}'}}
                {% endset %}

                {{ ps.label_with_help('Page title'|trans, (pageTilteLabel))}}
              </label>
              <div class="col-sm">
                {{ form_errors(metaForm.page_title) }}
                {{ form_widget(metaForm.page_title) }}
              </div>
            </div>
            <div class="form-group row">
              <label class="form-control-label">
                {% set metaDescriptionLabel %}
                  {{ 'A short description of your shop.'|trans({}, 'Admin.Shopparameters.Help') }}
                  {{ 'Invalid characters:'|trans({}, 'Admin.Shopparameters.Help') ~ ' &lt;&gt;;=#{}' }}
                {% endset %}
                {{ ps.label_with_help('Meta description'|trans, (metaDescriptionLabel))}}
              </label>
              <div class="col-sm">
                {{ form_errors(metaForm.meta_description) }}
                {{ form_widget(metaForm.meta_description) }}
              </div>
            </div>
            <div class="form-group row">
              <label class="form-control-label">
                {% set metaKeywordsLabel %}
                  {{ 'List of keywords for search engines.'|trans({}, 'Admin.Shopparameters.Help') }}
                  {{ 'To add tags, click in the field, write something, and then press the "Enter" key.'|trans({}, 'Admin.Shopparameters.Help') }}
                  {{ 'Invalid characters:'|trans({}, 'Admin.Shopparameters.Help') ~ ' &lt;&gt;;=#{}' }}
                {% endset %}
                {{ ps.label_with_help('Meta keywords'|trans, (metaKeywordsLabel))}}
              </label>
              <div class="col-sm">
                {{ form_errors(metaForm.meta_keywords) }}
                {{ form_widget(metaForm.meta_keywords, {'attr':{'class': 'js-token-field', 'placeholder': 'Add tag'|trans({}, 'Admin.Actions')}}) }}
              </div>
            </div>
            <div class="form-group row">
              <label class="form-control-label">
                {% set rewriteUrlLabel %}
                  {{ 'For instance, "contacts" for http://example.com/shop/contacts to redirect to http://example.com/shop/contact-form.php'|trans({}, 'Admin.Shopparameters.Help') }}
                  {{ 'Only letters and hyphens are allowed.'|trans({}, 'Admin.Shopparameters.Help') }}
                {% endset %}
                {{ ps.label_with_help('Rewritten URL'|trans, (rewriteUrlLabel))}}
              </label>
              <div class="col-sm">
                {{ form_errors(metaForm.url_rewrite) }}
                {{ form_widget(metaForm.url_rewrite) }}
              </div>
            </div>
            {{ form_rest(metaForm) }}
          </div>
        </div>
      </div>

      {{ form_end(metaForm) }}
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('themes/new-theme/public/meta.bundle.js') }}"></script>
{% endblock %}
