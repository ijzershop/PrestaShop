{#{ dump(modules) }#}
<div id="modules-grid">
    <div class="row">
        {% for module in modules %}
                <div class="module-item-grid col-md-3" data-id="{{ module.id }}" data-name="{{ module.displayName }}"
                data-logo="{{ module.media.img }}" data-author="{{ module.author }}" data-version="{{ module.version }}" data-description="{{ module.description }}"
                data-tech-name="{{module.name}}" data-categories="{{ module.refs|join('|') }}" data-type="{{module.productType}}">
                     <div class="module-item-wrapper-grid">
                        <div class="module-item-heading-grid">
                            <img class="module-logo-thumb-grid" height="20" width="20" src="{{ module.media.img }}" alt="{{ module.displayName }}" />
                            <div class="text-ellipsis module-name-grid" data-toggle="tooltip" data-placement="top" title="{{ module.displayName }}">
                                {{ module.displayName }}
                            </div>
                            <div class="x-small-text module-version-author-grid">
                                {% if module.productType == "modules" %}
                                    v{{ module.version }} by {{ module.author }}
                                {% else %}
                                    Service by {{ module.author }}
                                {% endif %}
                            </div>
                        </div>
                        <div class="module-quick-description-grid no-padding">
                            {{ module.description }}
                            <div class="module-read-more-grid">
                                ...
                                <a class="module-read-more-grid-btn" href="#" data-toggle="modal" data-target="#module-modal-read-more-{{module.name}}">Read More</a>
                            </div>
                        </div>
                        <div class="module-quick-action-grid clearfix">
                            <div class="pull-right">
                                {% if module.price.EUR == 0 %}
                                    <input type="button" class="light-button" value="Free" data-toggle="modal" data-target="#module-modal-install-{{module.name}}" />
                                {% else %}
                                    <input type="button" class="light-button" value="{{module.price.EUR}}" data-toggle="modal" data-target="#module-modal-install-{{module.name}}" />
                                {% endif %}

                            </div>
                        </div>
                        {# Include Modal partial and give it current module to fill in included tpl #}
                        {% include 'PrestaShopBundle:Admin/Module/_partials:_modules_modal_install.html.twig' with { 'module': module } %}
                        {% include 'PrestaShopBundle:Admin/Module/_partials:_modules_modal_read_more.html.twig' with { 'module': module } %}
                    </div>
                </div>
        {% endfor %}
    </div>
</div>
