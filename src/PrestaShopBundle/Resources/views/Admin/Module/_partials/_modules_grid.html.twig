{#{ dump(modules) }#}
{# Display type ENUM : 'grid' / 'list' #}
{% if display_type is not defined %}
    {% set display_type = 'grid' %}
{% endif %}

{% if display_type == 'list' %}
    {% set col_lg = 'col-lg-12' %}
{% else %}
    {% set col_lg = 'col-lg-3 col-md-4 col-sm-6' %}
{% endif %}

<div id="modules-{{display_type}}">
    <div class="row">
        {% for module in modules %}
            {# Module Card #}
            {% include 'PrestaShopBundle:Admin/Module/_partials:_modules_card.html.twig'
                with {
                    'module': module,
                    'display_type': display_type,
                    'col_lg': col_lg
                }
            %}
        {% endfor %}
        <div class="module-addons-item-grid {{col_lg}}">
            <div class="module-addons-item-wrapper-grid">
                <span class="module-icon-addons-exit-grid">
                    <i class="icon-signout"></i>
                </span>
                Check results on PrestaShop's Addons Marketplace
            </div>
        </div>
    </div>
</div>
