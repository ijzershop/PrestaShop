{%- block customizations_widget -%}
  {% set prototype = form.customization_fields.vars.prototype %}
  {%- set attr = attr|merge({'data-prototype': form_row(prototype), 'data-prototype-name': prototype.vars.name }) -%}
  {%- set attr = attr|merge({'class': (attr.class|default('') ~ ' col-md-12')|trim }) -%}
  <div {{ block('widget_attributes') }}>
    <ul class="list-unstyled">
      {{ form_row(form.customization_fields) }}
    </ul>
    {{ form_widget(form.add_customization_field) }}
  </div>
{%- endblock customizations_widget -%}

{%- block customizations_row -%}
  <h2>{{ 'Customization'|trans({}, 'Admin.Catalog.Feature') }}</h2>
  {{ form_widget(form) }}
{%- endblock customizations_row -%}

{%- block customization_field_row -%}
  <li class="form-group row customization-field-item">
    {{ form_widget(form.id) }}
    <div class="col-md-5">
      {{ form_widget(form.name) }}
      {{ form_errors(form.name) }}
    </div>
    <div class="col-md-4">
      {{ form_widget(form.type) }}
      {{ form_errors(form.type) }}
    </div>
    <div class="col-md-1">
{#      @todo: render form_widget instead of custom button once IconButtonType is implemented #}
{#      {{ form_widget(form.remove) }}#}
      <button type="button" class="btn text-secondary remove-customization-btn">
        <i class="material-icons">delete</i>
      </button>
    </div>
    <div class="col-md-2">
      {{ form_widget(form.required) }}
      {{ form_errors(form.required) }}
    </div>
  </li>
{%- endblock customization_field_row -%}

{%- block _product_customizations_customization_fields_row -%}
    {{- block('form_rows') -}}
{%- endblock _product_customizations_customization_fields_row -%}
